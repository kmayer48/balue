<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4>Happy Hour Deal Submission</h4>
                <p class="left-align light"></p>
            </div>
        </div>
